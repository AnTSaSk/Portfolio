# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
max_line_length = off

[*.md]
trim_trailing_whitespace = false

[*.{cjs,mjs,js,jsx,ts,tsx,vue,css,sass,scss,json,yml}]
indent_style = space
indent_size = 2
